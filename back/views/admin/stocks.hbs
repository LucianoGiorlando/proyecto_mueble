<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="container" style="margin-top: 50px;">
        <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a> </p>
    </div>
    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7"> 
            <h3>Lista de Muebles Disponibles</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/stocks/agregar"> <i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    {{!-- fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Mueble</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>

                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stocks}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{precio}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary" href="/admin/stocks/modificar/{{id}} "><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a class="btn btn-secondary" href="/admin/stocks/eliminar/{{id}} "><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
